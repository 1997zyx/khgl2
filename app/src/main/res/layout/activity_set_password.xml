<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SetPasswordActivity">

    <ImageView
        android:layout_width="47.5dp"
        android:layout_height="42dp"
        android:layout_gravity="right"
        />

    <RelativeLayout

        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:src="@mipmap/login_button_jiantou_back"></ImageView>
        <TextView
            android:id="@+id/iv_fanhuo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/text_1b1b1b"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="22dp"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="18.5dp"
                        android:layout_height="18.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/denglu_password" />

                    <EditText
                        android:id="@+id/et_password_jiu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入旧密码"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_password_jiu"
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/item_password"
                        android:button="@null"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="22dp"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_width="18.5dp"
                        android:layout_height="18.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/denglu_password" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入新密码"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_password"
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:layout_gravity="center_vertical"

                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/item_password"
                        android:button="@null"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="22dp"
                app:contentPadding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >

                    <ImageView
                        android:layout_width="18.5dp"
                        android:layout_height="18.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/denglu_password" />

                    <EditText
                        android:id="@+id/et_password_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请再次输入新密码"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_password_two"
                        android:layout_width="13.5dp"
                        android:layout_height="13.5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/item_password"
                        android:button="@null" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:background="@mipmap/login_bg_but"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">


            <ImageView
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                 />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>