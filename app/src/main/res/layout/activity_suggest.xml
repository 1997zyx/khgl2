<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.activity.SuggestActivity">

    <RelativeLayout
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="8dp">

    <ImageView
        android:id="@+id/fanhui"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/fanhui"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="联系我们"
            android:textColor="@color/text_1b1b1b"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题和建议"
                    android:textColor="@color/text_1b1b1b"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_marginTop="7.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuanjiao4_d3d3d"
                    android:padding="15dp">


                    <EditText
                        android:id="@+id/et_content"
                        android:gravity="top"
                        android:maxLength="500"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="简要描述你要反馈的问题和意见"
                        android:minLines="7"
                        android:textColor="@color/text_1b1b1b"
                        android:textColorHint="@color/text_959595"
                        android:textSize="14sp"></EditText>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="联系方式"
                    android:textColor="@color/text_1b1b1b"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:background="@drawable/yuanjiao4_d3d3d"
                    android:padding="15dp">

                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请留下您的联系方式"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/text_1b1b1b"
                        android:textColorHint="@color/text_959595"
                        android:textSize="14sp"></EditText>
                </LinearLayout>


            </LinearLayout>
            <Button
                android:layout_marginTop="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/login_bg_but"
                android:text="提交"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"></Button>
            <ImageView
                android:id="@+id/kefu"
                android:src="@mipmap/img_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>