<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bg"

    tools:context=".ui.activity.ZhanghuActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <ImageView
            android:id="@+id/fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@mipmap/fanhui"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="账户管理"
                android:textColor="@color/text_1b1b1b"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_marginTop="1dp"
            android:id="@+id/touxiang_rl"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.5dp"
                android:textColor="@color/text_1b1b1b"
                android:textSize="14sp"
                android:text="手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""
                    android:id="@+id/phone_num_tv"
                    android:textSize="14sp"
                    android:textColor="#FF535353"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/colorWhite"
            android:id="@+id/password_rl"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="8.5dp"
                android:layout_toRightOf="@+id/iv_gl"
                android:textColor="@color/text_1b1b1b"
                android:textSize="14sp"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/name_tv"
                android:ellipsize="end"
                android:maxLength="15"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/name_iv"
                android:layout_marginLeft="8.5dp"
                android:layout_toRightOf="@+id/iv_gl"
                android:textColor="@color/bg_ffa0a0a0"
                android:textSize="14sp"
                android:text="去修改"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/name_iv"
                android:layout_alignParentRight="true"
                android:src="@mipmap/gengduo"
                android:layout_width="13dp"
                android:layout_height="13dp"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/renzheng_rl"
            android:background="@color/colorWhite"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="8.5dp"
                android:layout_toRightOf="@+id/iv_gl"
                android:textColor="@color/text_1b1b1b"
                android:textSize="14sp"
                android:text="实名认证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView

                android:id="@+id/renzheng_tv"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLength="15"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8.5dp"
                android:layout_toRightOf="@+id/iv_gl"
                android:textColor="#FF00A0E9"
                android:textSize="14sp"
                android:text="去认证"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>