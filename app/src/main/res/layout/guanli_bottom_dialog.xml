<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/dialogwrite_yuanjiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/title_rl"
            android:paddingTop="20dp"
            android:paddingLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_centerVertical="true"
                android:textColor="@color/text_1b1b1b"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="渠道"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:src="@mipmap/popup_but_off"
                android:layout_width="40dp"
                android:layout_height="40dp"></ImageView>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:maxHeight="500dp"
                    android:id="@+id/ll_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <Button
                    android:layout_below="@+id/ll_content"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_true"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="确认"
                    android:background="@drawable/btn_bg_two"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></Button>
            </RelativeLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>