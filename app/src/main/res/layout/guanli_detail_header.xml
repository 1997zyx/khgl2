                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="60dp"
                            android:layout_toRightOf="@+id/tv_one"

                            android:textColor="@color/text_1b1b1b"
                            android:textSize="14sp"
