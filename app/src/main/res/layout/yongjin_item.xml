<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@drawable/bg_yuanjiao_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time"
            android:textColor="@color/text_959595"
            android:padding="14dp"
            android:text="成交时间：2021-07-19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <View
            android:background="@color/background_bg"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/salary_view_bg"
                android:layout_width="4.5dp"
                android:layout_height="15.5dp"></View>
            <TextView
                android:id="@+id/tv_name"
                android:textStyle="bold"
                android:layout_marginLeft="7dp"
                android:textColor="#FF000000"
                android:textSize="17sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <RelativeLayout

            android:paddingRight="25dp"
            android:paddingLeft="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="14dp"
                android:textSize="12sp"
                android:id="@+id/tv_cje"
                android:textColor="#FF707070"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/tv_cjfa"
                android:layout_marginBottom="22dp"
                android:textSize="12sp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/tv_cje"
                android:textColor="#FF707070"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_yongjin"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_1b1b1b"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:textColor="#FFB5B5B5"
                    android:text="佣金"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>