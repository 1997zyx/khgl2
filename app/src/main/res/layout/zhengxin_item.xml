<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="19dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_yuanjiao_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zuijin_tv"
                android:textSize="9dp"
                android:textStyle="bold"

                android:textColor="@color/colorWhite"
                android:background="@drawable/red_tv_zuijin"
                android:layout_alignParentRight="true"
                android:text="最近"
                android:gravity="center"
                android:layout_width="35dp"
                android:layout_height="15dp"></TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:textStyle="bold"
                android:textColor="@color/text_1b1b1b"
                android:textSize="17sp"
                android:text="中国银行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout

            android:paddingBottom="11dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:textSize="11sp"
                    android:textColor="@color/ff7d7d7d"
                    android:text="时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/fff39800"
                    android:text="时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_phone"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/but_phone"
                        android:layout_width="18dp"
                        android:layout_height="18dp"></ImageView>
                    <TextView
                        android:textSize="11sp"
                        android:layout_marginLeft="6.5dp"
                        android:text="电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/address_ll"

                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/but_dingwei"
                        android:layout_width="18dp"
                        android:layout_height="18dp"></ImageView>
                    <TextView
                        android:id="@+id/add_tv"
                        android:textSize="11sp"
                        android:layout_marginLeft="6.5dp"
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>